<%= render "admin/shared/page" %>

################### Header Begins ###################
<% content_for :page_header do %>

<h2 class="page-header">
  Create User
</h2>

<% end %>
################### Header Ends ###################

################### Body Begins ###################
<% content_for :page_body do %>

<div class="row">
  <div class="col-lg-6">
    <%= form_for @user, url: {action: "create"}, html: {method: :post } do |f| %>

      <div class="form-group">
        <%= f.label :corporate_id, 'Corporate Id' %>
        <%= f.text_field :corporate_id, class: 'form-control', placeholder: 'Enter Corporate Id' %>
      </div>

      <div class="form-group">
        <%= f.label :establishment_id, 'Establishment Id' %>
        <%= f.text_field :establishment_id, class: 'form-control', placeholder: 'Enter Establishment Id' %>
      </div>

      <div class="form-group">
        <%= f.label :user_id, 'User Id' %>
        <%= f.text_field :user_id, class: 'form-control', placeholder: 'Enter User Id' %>
      </div>

      <div class="form-group">
        <%= f.label :user_name, 'User Name' %>
        <%= f.text_field :user_name, class: 'form-control', placeholder: 'Enter User Name' %>
      </div>

      <div class="form-group">
        <%= f.label :role %>
        <%= f.collection_select(:role, Auth::Role.apply_context(@context), :code, :desc, {:include_blank => 'Select Role..'}, {:class => 'form-control'}) %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email Id of the User' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: 'Enter Password' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: 'Re-Enter Password' %>
      </div>

      <%= f.submit "Create", class: 'btn btn-primary' %>
      <%= link_to "Back", :back, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<% end %>
################### Body Ends ###################