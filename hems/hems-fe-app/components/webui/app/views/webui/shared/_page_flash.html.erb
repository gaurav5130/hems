<%
	#Returned by Devise during timeouts. This is not expected to display.
	flash.delete("timedout")

	flash.each do |key, value| 
	#Devise specific flash convertion to bootstrap alerts.
	key = "info" if (key == "notice")
	key = "warning" if (key == "alert")
%>

<div class="alert alert-<%=key%> alert-dismissable">
  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<i class="fa fa-info-circle"></i>&nbsp;<%= value %>
</div>

<% end %>